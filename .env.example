# BioNexus Cloud Environment Variables
# Copy this file to .env and customize for your cloud environment

# ===========================================
# CLOUD DATABASE CONFIGURATION (REQUIRED)
# ===========================================

# Neo4j Aura Cloud Database (REQUIRED)
NEO4J_URI=neo4j+s://your-neo4j-instance.databases.neo4j.io
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-aura-password
NEO4J_DATABASE=neo4j

# Milvus Cloud Vector Database (REQUIRED)
MILVUS_HOST=your-milvus-endpoint.milvusdb.io
MILVUS_PORT=19530
MILVUS_USER=your-milvus-username
MILVUS_PASSWORD=your-milvus-password
MILVUS_SECURE=true
MILVUS_COLLECTION_NAME=bionexus_embeddings

# Google Cloud Storage (REQUIRED)
GCS_BUCKET_NAME=bionexus-documents
GCS_PROJECT_ID=your-gcp-project-id
GCS_CREDENTIALS_PATH=/app/gcp-key.json

# ===========================================
# EXTERNAL API KEYS (REQUIRED)
# ===========================================

# OpenAI API (for RAG and summarization)
OPENAI_API_KEY=sk-your-openai-api-key

# Hugging Face (for ML models)
HUGGINGFACE_API_KEY=hf_your-huggingface-token

# ===========================================
# OPTIONAL API KEYS (Enhanced Features)
# ===========================================

# Meteomatics Weather API (optional)
METEOMATICS_USERNAME=your-meteomatics-username
METEOMATICS_PASSWORD=your-meteomatics-password

# Azure Cognitive Services (optional)
AZURE_COGNITIVE_KEY=your-azure-cognitive-services-key

# Miro Collaboration Platform (optional)
MIRO_API_KEY=your-miro-api-key
MIRO_CLIENT_ID=your-miro-client-id

# Google Maps API (for frontend - optional)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# ===========================================
# CLOUD APPLICATION CONFIGURATION
# ===========================================

# Environment Settings
ENVIRONMENT=production
CLOUD_ENVIRONMENT=gcp
DEBUG=false
LOG_LEVEL=INFO

# API Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Frontend URLs (Update with your domain)
NEXT_PUBLIC_API_URL=https://api.bionexus.space
CORS_ORIGINS=["https://app.bionexus.space","https://bionexus.space","http://localhost:3000"]

# Security Settings (CHANGE THESE IN PRODUCTION)
SECRET_KEY=your-secure-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Processing Configuration
MAX_UPLOAD_SIZE=100000000
BATCH_SIZE=32
MAX_PAGES_PER_PDF=500
OCR_TIMEOUT=300
EMBEDDING_TIMEOUT=600

# ML Models Configuration
COLPALI_MODEL=vidore/colpali-v1.3-hf
SPACY_MODEL=en_ner_bionlp13cg_md
DEVICE=auto

# Google Cloud Memorystore Redis (Optional)
REDIS_URL=redis://your-memorystore-ip:6379
CACHE_TTL=3600

# Monitoring Configuration  
ENABLE_METRICS=true
METRICS_PORT=9090